@model List<Entidades.Models.ERecibos>
@{
    ViewData["Title"] = "Recibos";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>Recibos</h2>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success" asp-action="Create" asp-controller="Home">Nuevo</a>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>
                        <p>Consecutivo</p>
                    </td>
                    <td>
                        <p>Monto</p>
                    </td>
                    <td>
                    </td>

                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>
                            @r.consecutivo
                        </td>
                        <td>
                            @r.monto
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Create" asp-route-id="@r.id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@r.id" class="btn btn-danger">Eliminar</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    }



</div>


