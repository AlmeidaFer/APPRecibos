@model Entidades.Models.EUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WARecibos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WARecibos.styles.css" asp-append-version="true" />
</head>
<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div id="contenedor" class=" d-flex row justify-content-center  ">
                <div class="col-8 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h4> Iniciar Sesion</h4>
                            <form asp-action="Iniciar">
                                <div class="form-group">
                                    <label for="email" class="">Correo:</label><br>
                                    <input type="text" asp-for="@Model.email" class="form-control" /><br>
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label for="pass" class="">Contraseña:</label><br>
                                    <input type="password" asp-for="@Model.pass" class="form-control" /><br>
                                    <span asp-validation-for="pass" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <input type="submit" class="form-control btn-primary" value="Iniciar" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
